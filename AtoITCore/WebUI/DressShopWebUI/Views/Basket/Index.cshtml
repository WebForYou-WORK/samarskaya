@model DressShopWebUI.Models.BasketViewModel

@{
    ViewBag.Title = "Ваша корзина";
}
<div class="row menu-top">
    <div class="container-fuild menu">
        <nav class="navbar navbar-default" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav">
                    <li class="myLi">
                        <a href="/Home/Index"><span style="font-weight: lighter">О ДИЗАЙНЕРЕ</span></a>
                    </li>
                    <li class="myLi">
                        <a href="/Home/Selling"><span style="font-weight: lighter">ONLINE-ГАРДЕРОБ</span></a>
                    </li>
                    <li class="myLi">
                        <a href="/Home/Gallery"><span style="font-weight: lighter">ГАЛЕРЕЯ</span></a>
                    </li>
                    <li class="myLi">
                        <a href="/Home/Partners"><span style="font-weight: lighter">ПАРТНЕРЫ</span></a>
                    </li>
                    <li class="myLi">
                        <a href="/Home/ClientFeedback"><span style="font-weight: lighter">ОТЗЫВЫ</span></a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</div>
<div class="container">
    <h3 align="center">@ViewBag.Sorry</h3>

    @foreach (var line in Model.Basket.Lines)
    {
        <div class="row basket">
            @foreach (var i in line.Photo)
            {
                if (i.Priority)
                {
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 basket-images">
                        <img class="basket-img" src="~/PhotoForDB/@i.PhotoUrl" alt="">
                    </div>
                }
            }
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 basket-opis">
                <h4 class="basket-name">"@line.Name"</h4>
                @if (line.Discount != 0)
                {
                    <p class="basket-price">
                        @(line.Price - line.Price * line.Discount / 100) грн
                    </p>
                }
                else
                {
                    <p class="basket-price">
                        @line.Price.ToString("# грн")
                    </p>
                }
            </div>
            <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5 basket-button">
                @using (Html.BeginForm("RemoveFromBasket", "Basket"))
                {
                    @Html.Hidden("productId", line.ProductId)
                    @Html.HiddenFor(x => x.ReturnUrl)
                    <input class="btn btn-default" type="submit" value="Удалить" style="float: right" />
                }
            </div>
        </div>
    }
    <div class="row itogo">
        @if (Model.Basket.CountItem != 0)
        {
            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 vsego">
                <p><span>ВСЕГО:</span></p>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <p><span>@Model.Basket.ComputeTotalValue().ToString("# грн")</span></p>
            </div>
        }


        @using (Html.BeginForm())
        {
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 itogo">
                <h4>Данные для оформления покупки</h4>
                @Html.EditorFor(x => x.Orders.ClientName, new { htmlAttributes = new { style = "margin: 0px; width: 100%; height: 30px;", placeholder = "Имя" } })
                @Html.ValidationMessageFor(x => x.Orders.ClientName)
                <br/>
                <br />
                @Html.EditorFor(x => x.Orders.Email, new { htmlAttributes = new { style = "margin: 0px; width: 100%; height: 30px;", placeholder = "E-mail" } })
                @Html.ValidationMessageFor(x => x.Orders.Email)
                <br />
                <br />
                @Html.EditorFor(x => x.Orders.Phone, new { htmlAttributes = new { style = "margin: 0px; width: 100%; height: 30px;", placeholder = "Номер телефона" } })
                @Html.ValidationMessageFor(x => x.Orders.Phone)
                <br />
                <br />
                <h4>Способ оплаты</h4>
                <input id="Radio1" type="radio" value="наличными" name="Orders.Payment" data-val-required="Вы не выбрали способ оплаты" data-val="true" /><label style="margin: 5px">Наличными</label>
                <br />
                <input id="Radio2" type="radio" value="перевод на карту" name="Orders.Payment" data-val-required="Вы не выбрали способ оплаты" data-val="true" /><label style="margin: 5px">Перевод на карту</label>
                <br />
                <input id="Radio3" type="radio" value="Международный перевод" name="Orders.Payment" data-val-required="Вы не выбрали способ оплаты" data-val="true" /><label style="margin: 5px">Международный перевод</label>
                @Html.ValidationMessageFor(x => x.Orders.Payment)
                <br />
                <br />
                
                <h4>Способ доставки</h4>
                <input id="Radio4" type="radio" value="cамовывоз" name="Orders.Delivery" data-val-required="Вы не выбрали способ доставки" data-val="true" /><label style="margin: 5px">Самовывоз</label>
                <br />
                <input id="Radio5" type="radio" value="почта" name="Orders.Delivery" data-val-required="Вы не выбрали способ доставки" data-val="true" /><label style="margin: 5px">Почта</label>
                @Html.ValidationMessageFor(x => x.Orders.Delivery)
                
                <br />
                <br />
                @Html.EditorFor(x => x.Orders.Address, new { htmlAttributes = new { style = "margin: 0px; width: 100%; height: 80px;", placeholder = "Адрес" } })
                @Html.ValidationMessageFor(x => x.Orders.Address)
                <br />
                <br />
                @Html.EditorFor(x => x.Orders.Сomment, new { htmlAttributes = new { style = "margin: 0px; width: 100%; height: 80px;", placeholder = "Комментарий" } })
                @Html.ValidationMessageFor(x => x.Orders.Сomment)
                
                <br/>
                <br />
                                   
                                        
                <input class="btn btn-primary" type="submit" style="margin-left: -30px" value="Оформить заказ" />
                <a href="@Model.ReturnUrl">
                    <input id="Button1" class="btn btn-primary" type="button" style="margin-right: -30px; float: right" value="Продолжить покупку"/>
                </a>
            </div>
        }
    </div>

</div>
<script async src="~/Scripts/jquery.validate.min.js"></script>
<script async src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>





