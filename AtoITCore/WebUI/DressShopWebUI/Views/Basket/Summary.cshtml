@model Domain.Entityes.Basket
<style>
    .basketLink {
        text-decoration: none;
    }
        .basketLink:focus, .basketLink:hover {
            text-decoration: none;
        }
</style>
<a href="@Url.Action("Index", new {returnUrl = Request.Url?.PathAndQuery})" class="basketLink">
    
    @{
        if (Model.CountItem == 0)
        {
            <img src="~/img/basketpic.png" alt="Корзинка покупок" title="Корзина">
        }

        if (Model.CountItem != 0)
        {
           <span  style="background-image: url('../../img/basketpic1.png'); background-size:100% 100%;
                                       background-position:center; 
                                       background-repeat:no-repeat;margin-left: 18px; padding-bottom: 7px; color: darkorange; font-size: 18px ">&nbsp;&nbsp;@Model.CountItem&nbsp;&nbsp;</span> 
        }
    }
</a>
