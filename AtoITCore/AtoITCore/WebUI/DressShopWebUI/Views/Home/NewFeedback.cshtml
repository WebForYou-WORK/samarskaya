@model Domain.Entityes.Reviews

@using (Html.BeginForm("Feedback", "Home", FormMethod.Post))
{
    <div id="radios">
        <label for="cycling" class="material-icons">
            <input type="radio" name="Rating" id="cycling" value="2" />
            <span><img src="~/img/smailBad.png" title="плохо" style="margin-top:-5px" /></span>
        </label>
        <label for="driving" class="material-icons">
            <input type="radio" name="Rating" id="driving" value="1" />
            <span><img src="~/img/smailOk.png" title="Отлично!" style="margin-top:-5px" /></span>
        </label>
    </div>
    <br />
    @Html.EditorFor(x => x.ClientName, new { htmlAttributes = new { style = "margin: 0px; width: 60%; height: 20px;",  placeholder = "Введите ваше имя" } })
    @Html.ValidationMessageFor(x => x.ClientName)
    <br />
    <br />
    @Html.EditorFor(x => x.Email, new { htmlAttributes = new { style = "margin: 0px; width: 60%; height: 20px;", placeholder = "Введите ваш E-mail" } })
    @Html.ValidationMessageFor(x => x.Email)
    <br />
    <br />
    
   
    @Html.EditorFor(x => x.ClientFeedback, new { htmlAttributes = new { style = "margin: 0px; width: 100%; height: 80px;", placeholder = "Оставьте ваш отзыв" } })
    @Html.ValidationMessageFor(x => x.ClientFeedback)
    <br />
    <br />
    @Html.EditorFor(x => x.Advantages, new { htmlAttributes = new { style = "margin: 0px; width: 100%; height: 40px;", placeholder = "Достоинства товара" } })
    @Html.ValidationMessageFor(x => x.Advantages)
    <br />
    <br />
    @Html.EditorFor(x => x.LackOf, new { htmlAttributes = new { style = "margin: 0px; width: 100%; height: 40px;", placeholder = "Недостатки товара" } })
    @Html.ValidationMessageFor(x => x.LackOf)
    <br />
    <br />
    <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
        <button id="form" class="btn btn-primary" type="submit" data-dismiss="modal">Отправить отзыв</button>
    </div>
    
}