<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<style>
    /*---------------------------------- cмайлы------------------------------------*/
    #radios label {
        cursor: pointer;
        position: relative;
    }

        #radios label + label {
            margin-left: 25px;
        }

    input[type="radio"] {
        opacity: 0; /* hidden but still tabable */
        position: absolute;
    }

        input[type="radio"] + span {
            font-family: 'Material Icons';
            color: #B3CEFB;
            border-radius: 100%;
            padding-bottom: 7px;
            transition: all 0.4s;
            -webkit-transition: all 0.4s;
        }

        input[type="radio"]:checked + span {
            color: #D9E7FD;
            background-color: rgba(246, 252, 34, 0.46);
        }

        input[type="radio"]:focus + span {
            color: #fff;
        }
    /*---------------------------------- cмайлы------------------------------------*/
</style>
